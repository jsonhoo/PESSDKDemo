<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ai.pensees.sdkdemo.MainActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/gtw2"
        android:layout_width="200dp"
        android:layout_height="200dp"/>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_no"
            android:textSize="20sp"
            android:text="用户编号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.inputmethodservice.ExtractEditText
            android:textSize="18sp"
            android:layout_toRightOf="@+id/tv_no"
            android:id="@+id/input_user_no"
            android:hint="请输入用户编号"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_name"
            android:textSize="20sp"
            android:text="姓名:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.inputmethodservice.ExtractEditText
            android:textSize="18sp"
            android:layout_toRightOf="@+id/tv_name"
            android:id="@+id/input_user_name"
            android:hint="请输入用户姓名"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_carNo"
            android:textSize="20sp"
            android:text="卡号:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <android.inputmethodservice.ExtractEditText
            android:textSize="18sp"
            android:layout_toRightOf="@+id/tv_carNo"
            android:id="@+id/input_user_carNo"
            android:hint="请输入卡号"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
    </RelativeLayout>

</LinearLayout>